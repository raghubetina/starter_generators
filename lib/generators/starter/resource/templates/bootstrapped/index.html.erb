<h1>
  All <%= plural_table_name.humanize.downcase %>
</h1>

<a href="/<%= plural_name %>/new">
  Add a new <%= singular_table_name.humanize.downcase %>
</a>

<hr>

<table class="table">
  <tr>
<% attributes.each do |attribute| -%>
    <th>
      <%= attribute.human_name %>
    </th>

<% end -%>
    <th>
    </th>
  </tr>

  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
<% attributes.each do |attribute| -%>
    <td>
      <%%= <%= singular_table_name %>.<%= attribute.name %> %>
    </td>

<% end -%>
    <td>
<% if named_routes? -%>
      <%%= link_to <%= singular_table_name %>_url(<%= singular_table_name %>), :class => "btn btn-primary" do %>
        Show
      <%% end %>
      <%%= link_to edit_<%= singular_table_name %>_url(<%= singular_table_name %>), :class => "btn btn-warning" do %>
        Edit
      <%% end %>
      <%%= link_to <%= singular_table_name %>_url(<%= singular_table_name %>), :method => "delete", :data => { :confirm => "Do you really want to delete this <%= singular_table_name %>?" }, :class => "btn btn-danger" do %>
        Delete
      <%% end %>
<% else -%>
      <a href="/<%= plural_name %>/<%%= <%= singular_table_name %>.id %>">
        Show details
      </a>
<% unless read_only? -%>
<% end -%>
<% end -%>
    </td>
  </tr>
  <%% end %>
</table>
